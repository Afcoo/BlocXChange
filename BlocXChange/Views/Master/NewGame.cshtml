@{
    ViewData["Title"] = "NewGame";
}
@model BlocXChange.ViewModels.NewGameViewModel

<h2>새 게임 생성</h2>

<div class="body-content">
    <form class="form-horizontal" method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label>게임 ID</label>
            <input type="text" class="form-control" asp-for="GameID" placeholder="게임 ID 입력" />
            <span class="text-danger" asp-validation-for="GameID"></span>
        </div>

        <div class="form-group">
            <label>게임 비밀번호</label>
            <input type="password" class="form-control" asp-for="GamePassword" placeholder="게임 비밀번호 입력" />
            <span class="text-danger" asp-validation-for="GamePassword"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">생성</button>
            <a class="btn btn-warning" href="#">취소</a>
        </div>
    </form>

</div>